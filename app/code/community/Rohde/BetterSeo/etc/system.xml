<?xml version="1.0"?>
<config>
    <tabs>
        <rohde translate="label" module="betterseo">
            <label>Rohde</label>
            <sort_order>299</sort_order>
        </rohde>
    </tabs>
    <sections>
        <betterseo translate="label" module="betterseo">
            <label>Better SEO</label>
            <tab>rohde</tab>
            <frontend_type>text</frontend_type>
            <sort_order>101</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <alternatelinks translate="label">
                    <label>Alternate Links</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <comment></comment>
                    <fields>
                        <enable_module translate="label">
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>0</sort_order>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable_module>
                        <hreflang_value translate="label">
                            <label>Hreflang format</label>
                            <comment>The value of the hreflang attribute can be language only (in ISO 639-1 format, e.g. 'en') or optionally include the region (in ISO 3166-1 Alpha 2 format, e.g. 'en-GB'). 'Language Only' is the recommended setting.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>betterseo/system_config_source_dropdown_formats</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </hreflang_value>
                        <xdefault_value translate="label">
                            <label>x-default locale</label>
                            <comment>This sets the x-default 'catch-all' to the translated url of the language you want your visitors to see when their language is not available. English, Spanish or Chinese would be a wise choice if that's available for your store.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>betterseo/system_config_source_dropdown_locales</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </xdefault_value>
                    </fields>
                </alternatelinks>
            </groups>
        </betterseo>
    </sections>
</config>